= simple_form_for [:administration, resource], html: { id: 'clear-form' } do |f|
  .form-group
    = f.input :title, input_html: { class: 'form-control' }, as: :string
  .form-group
    = f.input :description, input_html: { class: 'form-control', maxlength: 300}, as: :text
  .form-group
    = f.input :image, input_html: { class: 'form-control'}, as: :file
    - if resource.image?
        .info
          = "Usando: #{resource.image.url}"
  .form-group
    = f.input :link, input_html: { class: 'form-control col-md-4' }, as: :string
  .form-group
    = f.label :category, 'Categoria'
    %br
    = collection_radio_buttons(:resource, :category, resources_categories, :to_s, :to_s)
  .form-group
    = f.submit 'Finalizar', class: 'btn btn-lg btn-primary submit-btn'
    = link_to 'Cancel', administration_resources_path(), class: 'btn btn-lg btn-danger cancel-btn'

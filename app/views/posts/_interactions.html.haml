%ul.list-inline.post-interactions
  %li.likes
    - if user_likes?(post.slug)
      %i.fa.fa-heart.fa-2x
    - else
      %i.fa.fa-heart-o.fa-2x
    %button
      = post.likes
  %li.comments
    %a{ href: '#comments', title: "Comments" }
      %i.fa.fa-comment-o.fa-2x
      %button
        = comments.count
  %li.google.right.social-button{ title: 'Compartir en Google+', 'data-info': 'GooglePlus'}
    = link_to build_share_google_url(@post), target: '_blank', rel: 'no-follow' do
      &nbsp;
  %li.linkedin.right.social-button{ title: 'Compartir en LinkedIn', 'data-info': 'Linkedin'}
    = link_to build_share_linkedin_url(@post), target: '_blank', rel: 'no-follow' do
      &nbsp;
  %li.facebook.right.social-button{ title: 'Compartir en Facebook', 'data-info': 'Facebook'}
    = link_to build_share_facebook_url(@post), target: '_blank', rel: 'no-follow' do
      &nbsp;
  %li.twitter.right.social-button{ title: 'Compartir en Twitter', 'data-info': 'Twitter'}
    = link_to build_share_twitter_url(@post), target: '_blank', rel: 'no-follow' do
      &nbsp;
  %li.share-postLabel.right{ title: 'Share this post' }

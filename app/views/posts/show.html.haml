.post
  .row
    %div{ id: "post_#{@post.id}", class: 'post-content item-post-list single-post' }
      %h2.post-title
        = @post.title
      %h3.post-subtitle
        = @post.resume
      .post_content#post-content
        = raw @post.content
      .tags.left
        %ul.list-inline
          - @post.tags.split(',').each do |tag|
            %li
              = tag
      = render partial: 'posts/social_buttons', locals: { post: @post }
      .row-fluid
        = render partial: 'posts/related_posts', locals: { posts: @related_posts }
.post-footer
  .row
    = render partial: 'author/post_info', locals: { author: @post.author }
  .row
    .more-posts
  - if @post.comments.present?
    .row
      .comments
        = render partial: 'posts/comments', locals: { comments: @post.comments}
.subscription.subcription-post
  .row
    = render partial: 'subscriptions/form'
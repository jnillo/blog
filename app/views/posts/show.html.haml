%div{ id: "post_#{@post.id}", class: 'post item-post-list single-post' }
  %h2.post_title
    = @post.title
  %ul.list-inline.post-info
    %li
      %i.icon.fa.fa-user
      = @post.author
    %li
      %i.icon.fa.fa-calendar
      = @post.published
    %li.right
      %i.icon.fa.fa-tag
      = @post.category.name
  .post_content#post_content
    = raw @post.content
  %ul.list-inline.post_actions
    %li.right{ title: 'Compartir en LinkedIn' }
      %i.fa.fa-linkedin
    %li.right{ title: 'Compartir en Facebook' }
      %i.fa.fa-facebook
    %li.right{ title: 'Compartir en Twitter' }
      %i.fa.fa-twitter
    %li.right{ title: 'Compartir en Twitter' }
      = "Comp√°rtelo: "
= link_to t('return'), root_path, class: 'btn btn-default'
.comments
  = render partial: 'posts/comments', locals: { comments: @post.comments}
